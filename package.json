{
  "name": "solaris-stencil-starter",
  "private": true,
  "scripts": {
    "build": "turbo build --no-cache",
    "dev": "turbo dev",
    "storybook": "cd apps/react-project && npm run storybook",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "update": "git pull && npm run build"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
